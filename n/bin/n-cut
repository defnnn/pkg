#!/usr/bin/env bash

function main {
	set -efu

	nix build
	if git status -sb . | grep -v ^# | grep ^; then
		echo "ERROR: unclean workarea" 1>&2
		return 1
	fi

	n bump
	for a in VERSION REVISION; do if test -f "$a"; then git add -f "$a"; fi; done
	echo git commit  -m "bump $(basename "$(pwd)") $(cat VERSION REVISION 2>/dev/null || true)"
}

source sub "$0" "$@"
